<div class="item">
    <div>Título da receita</div>
    <div>
        <input
            type="text"
            name="title"
            value='{{recipes.title}}'>
    </div>
</div>

<div class="item meio">
    <div>Imagem da receita-URL</div>
    <div>
        <input
            type="url"
            name="image"
            placeholder="http://"
            value='{{recipes.image}}'>
    </div>
</div>

<div class="item meio">
    <div>Chef</div>
    <div>
    
        <input
            type="text"
            name="author"
            value='{{recipes.author}}'>
    </div>
</div>

<div id='ingredients' class="item meio">
    <div>Ingredientes</div>
    <div class='ingredient'>
        {% if recipes.ingredients.length <=0 %}
            <input
                type="text"
                name="ingredients[]"
            >
        {% endif %}
        {% for recipe in recipes.ingredients %}
            <input
                type="text"
                name="ingredients[]"
                value='{{recipe}}'>
        {% endfor %}
    </div>
</div>
<button type="button" class='btn-ingredient'>Adicionar ingrediente</button>

<div id='preparations' class="item meio">
    <div>Modo de preparo</div>
    <div class='preparation'>
        {% if recipes.preparation.length <=0 %}
            <input
                type="text"
                name="preparation[]"
            >
        {% endif %}
        {% for recipe in recipes.preparation %}
            <input
                type="text"
                name="preparation[]"
                value='{{recipe}}'>
        {% endfor %}
    </div>
</div>
<button type="button" class='btn-modopreparo'>Adicionar passo</button>

<div class="item meio">
    <div>Informações Adicionais</div>
    <div>
        <textarea name="information" cols="30" rows="10">{{recipes.information}}</textarea>
        
    </div>
</div>
 
<button id='btn-salvar'type="submit">Salvar Receita</button>
<script src="/camposDinamicos.js"></script>
