<div class="item">
    <div>Nome</div>
    <div>
        <input
            type="text"
            name="name"
            value='{{chef.name}}'>
    </div>
</div>

<div class="item meio">
    <div>Avatar</div>
    {% if chef %}
        <div>
            <input
                type="text"
                name=""
                value='{{chef.src}}' disabled='disabled'>
        </div>
    {% endif %}
    <div class="imagechef-input">
        <input
            class='input-file'
            type="file"
            name="image"
            accept='image/*'
            onchange='PhotoUploadChefs.handleFileInput(event)'
        >
        <span>Enviar Avatar</span>
    </div>
</div>


<button id='btn-salvar' type="submit">Salvar Chef</button>