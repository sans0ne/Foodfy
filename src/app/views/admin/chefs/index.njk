{% extends 'admin/recipes/layout.njk' %}

{% block content %}

<a id='criar-chefs' href="/admin/chefs/create">Criar Chef</a>

<h1>Gerenciar chefs</h1>
    {% if chefs.length <=0 %}
        <h1 style='color:red'>Nenhum chef cadastrado ainda</h1>
    {% endif %}

<div class="chefs-container">

    {% for chef in chefs %}

        <div class="chefs">
            <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
            <div class="chefs-detalhes">
                <div>{{chef.name}}</div>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>

    {% endfor %}

</div> 


{% endblock content %}